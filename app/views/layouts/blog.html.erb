<!DOCTYPE html>
<html>

  <head>
    <%= render 'shared/meta_layouts' %>
    <link href="https://fonts.googleapis.com/css?family=Playfair+Display:700,900" rel="stylesheet">
    
    <title><%= @page_title %></title>

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'blogs', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <div class="container">

      <%= render 'shared/blog_nav' %>
      <%= render 'shared/blog_topics_nav' %>
      <%= source_helper %>
      <%= render 'shared/blog_big_post' %>

      <main role="main" class="container">
        <div class="row">

          <%= yield %>
          <%= render 'shared/blog_sidebar' %>

        </div>
      </main>

      <%= render 'shared/blog_footer' %>

      <%= alerts %>

    </div>
    
  </body>

</html>
