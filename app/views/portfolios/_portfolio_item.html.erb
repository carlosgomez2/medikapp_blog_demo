<div class="col-md-4" data-id="<%= portfolio_item.id %>">
  <div class="card mb-4 box-shadow">
    <%= portfolio_image(portfolio_item, 'card-img-top') %>
    <div class="card-body">
      <p class="card-text"><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
      <p class="card-text"><%= portfolio_item.body.truncate(100) %></p>
      <div class="d-flex justify-content-between align-items-center">
        <% if logged_in?(:site_admin) %>
          <div class="btn-group">
            <%= link_to "Edit", edit_portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary' %>
            <%= link_to 'Delete', portfolio_path(portfolio_item), class: 'btn btn-sm btn-outline-secondary', method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
        <small class="text-muted"><%= distance_of_time_in_words(portfolio_item.created_at, Time.now) %> ago.</small>
      </div>
    </div>
  </div>
</div>